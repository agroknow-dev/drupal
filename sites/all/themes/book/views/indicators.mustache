{{>header}}
<div class="content main-content container">
	<ol class="breadcrumb">
	  <li><a href="/regions/global">{{#labels}}{{land_book}}{{/labels}}</a></li>
	  <li class="active">{{#labels}}{{indicators}}{{/labels}}</li>
	</ol>
	<div class="row countries-container">
		<div class="col-sm-12">
            <p>
                {{#labels}}{{{indicators_description}}}{{/labels}}
            </p>
            <p>
            	{{#labels}}{{{last_update_description}}}{{/labels}}
            </p>
        </div>
    </div>
    <div class="row countries-container">
        <div class="col-sm-6 col-lg-6">
            <label for="select-indicator">{{#labels}}{{select_an_indicator}}{{/labels}}:</label>
            <select id="country-select" name="select-indicator">
            	<option selected="true">{{#labels}}{{select_an_indicator}}{{/labels}}</option>
            	{{#indicators}}
            		<option value="{{id}}">{{name}}</option>
                {{/indicators}}
            </select>
        </div>
        <div class="col-sm-6 col-lg-6 text-right">
            <input id="expand" type="checkbox" name="expand-all" />
            <label for="expand-all">{{#labels}}{{expand_all}}{{/labels}}</label>
        </div>
    </div>
    <div class="continents">
        {{#topics}}
        <div class="row continent">
            <div class="col-sm-12 countries">
                <h1 class="country-name"><span>{{translation_name}}</span><span class="down"><i class="fa fa-angle-down"></i></span></h1>
                <div class="continent-countries">
	                {{#indicators}}
	                <div class="col-sm-8 col-md-6 col-lg-4">
	                	<div class="marker"></div>
	                	<span class="indicator-year">{{year}}</span>
	                	<a href="indicators/{{id}}">
	                       	<span class="name">{{name}}</span>
	                    </a>
	                </div>
	                {{/indicators}}
                </div>
            </div>
        </div>
        {{/topics}}
    </div>
</div>
{{>footer}}