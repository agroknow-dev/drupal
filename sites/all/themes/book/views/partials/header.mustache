<header class="main-header">
	{{>topbar}}
	<div class="container header-content">
		<div class="row">
			<div class="hidden-xs col-sm-8 col-md-9 motto">
				{{#labels}}{{book_motto}}{{/labels}}
			</div>
			<div class="col-xs-12 col-sm-4 col-md-3">
				<div class="input-group search">
					<input type="text" class="form-control" placeholder="{{#labels}}{{search}}{{/labels}}" name="srch-term" id="srch-term">
					<div class="input-group-btn">
						<button class="btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>			
		</div>
		<div class="row">
			<div class="col-sm-12 description">
				{{#labels}}{{book_description}}{{/labels}}
			</div>
		</div>
	</div>
	<!-- Navigation -->
	<div class="navigation">
		<nav class="tabs">
						<a href="/regions" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{regions}}{{/labels}}">
							<span>{{#labels}}{{regions}}{{/labels}}</span>
						</a>
						<a href="/countries" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{countries}}{{/labels}}">
							<span>{{#labels}}{{countries}}{{/labels}}</span>
						</a>

						<a href="/indicators" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{indicators}}{{/labels}}">
							<span>{{#labels}}{{indicators}}{{/labels}}</span>
						</a>
						<a href="/catalog" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{catalog}}{{/labels}}">
							<span>{{#labels}}{{catalog}}{{/labels}}</span>
						</a>
						<a href="/sources" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{sources}}{{/labels}}">
							<span>{{#labels}}{{sources}}{{/labels}}</span>
						</a>
						<a href="/widgets" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{widgets}}{{/labels}}">
							<span>{{#labels}}{{widgets}}{{/labels}}</span>
						</a>
						<a href="/data" alt="{{#labels}}{{go_to}}{{/labels}} {{#labels}}{{data}}{{/labels}}">
							<span>{{#labels}}{{data}}{{/labels}}</span>
						</a>
		</nav>
	</div>
</header>